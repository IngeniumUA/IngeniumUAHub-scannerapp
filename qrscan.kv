<ScanScreen>:
    MDLabel:
        size_hint_y: None
		height:'30dp'
		size_hint_x: 0.3
        pos_hint: {"x":0, "y":0.92}
		text: "Event "
		font_name: 'D-DIN.otf'
		halign: 'right'

	TextInput:
		size_hint_y: None
		height:'30dp'
		size_hint_x: 0.55
        pos_hint: {"x":0.3, "y":0.92}
        id: event
        multiline: False
        font_name: 'D-DIN.otf'

    ScanAnalyze:
        size_hint_y: 0.7
        size_hint_x: 0.98
        pos_hint: {"x":0.01, "y":0.2}
        id:preview
        extracted_data: root.got_result

    Button:
        size_hint_y: 0.08
        size_hint_x: 0.98
        pos_hint: {"x":0.01, "y":0.1}
        text: "Back"
        font_name: 'D-DIN.otf'
        color: 1,1,1,1
        background_normal: 'buttonnormal.png'
        background_down: 'buttondown.png'
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "login"

    Button:
        size_hint_y: 0.08
        size_hint_x: 0.48
        pos_hint: {"x":0.01, "y":0.01}
        text: "Reset Tokens"
        font_name: 'D-DIN.otf'
        color: 1,1,1,1
        background_normal: 'buttonnormal.png'
        background_down: 'buttondown.png'
        on_release:
            root.resettokens()
    Button:
        size_hint_y: 0.08
        size_hint_x: 0.48
        pos_hint: {"x":0.51, "y":0.01}
        text: "Reset Resets"
        font_name: 'D-DIN.otf'
        color: 1,1,1,1
        background_normal: 'buttonnormal.png'
        background_down: 'buttondown.png'
        on_release:
            root.resetresets()



<LoginScreen>
    MDLabel:
		size_hint_y: None
		height:'30dp'
		size_hint_x: 0.3
        pos_hint: {"x":0, "y":0.7}
		text: "Email "
		font_name: 'D-DIN.otf'
		halign: 'right'

    TextInput:
        size_hint_y: None
		height:'30dp'
		size_hint_x: 0.55
		pos_hint: {"x":0.3, "y":0.7}
        id: mail
        multiline: False
        font_name: 'D-DIN.otf'


    MDLabel:
		size_hint_y: None
		height:'30dp'
		size_hint_x: 0.3
        pos_hint: {"x":0, "y":0.65}
		text: "Password "
		font_name: 'D-DIN.otf'
		halign: 'right'

	TextInput:
		size_hint_y: None
		height:'30dp'
		size_hint_x: 0.55
        pos_hint: {"x":0.3, "y":0.65}
        id: passw
        multiline: False
        password: True
        font_name: 'D-DIN.otf'

    MDLabel:
        id: validitylabel
		size_hint_y: None
		height:'30dp'
		size_hint_x: 0.7
        pos_hint: {"x":0.3, "y":0.61}
		halign: 'left'
		color: 1,0,0,1
		font_size: 17
		font_name: 'D-DIN.otf'

    Button:
        id: confirmbutton
        size_hint: .5, .08
        pos_hint: {"x":0.25, "y":0.5}
        text: "Submit"
        font_name: 'D-DIN.otf'
        color: 1,1,1,1
        background_normal: 'buttonnormal.png'
        background_down: 'buttondown.png'
        on_release:
            root.login()
            root.buttonpress()



<TokenScreen>
    GridLayout:
        cols:1
        MDLabel:
            halign: "center"
            text: "Refreshing Token"
            font_name: 'D-DIN.otf'
			size_hint_y: 0.8
			background_color: 0, 0, 1, 1
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
        Button:
            size_hint_y: 0.2
            text: "Back"
            font_name: 'D-DIN.otf'
            color: 1,1,1,1
            background_normal: 'buttonnormal.png'
            background_down: 'buttondown.png'
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "scan"

