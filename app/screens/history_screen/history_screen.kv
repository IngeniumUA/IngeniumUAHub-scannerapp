<HistoryScreen>
    # button to initiate reset history
    Button:
        size_hint_x: 0.9
        pos_hint: {"x":0, "y":0.95}
        size_hint_y: 0.05
        text: "Wis Geschiedenis"
        font_name: 'app/assets/D-DIN.otf'
        color: 1,1,1,1
        background_normal: 'app/assets/buttonnormal.png'
        background_down: 'app/assets/buttondown.png'
        on_release:
            root.show_popup()

    MDIconButton:
        icon: "information-outline"
        id: goto_total_scanned
        pos_hint: {"center_x": 0.95, "center_y": 0.975}
        size_hint: 0.04, 0.04
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "total_scanned"

    # button to go back to scan screen
    Button:
        size_hint_x: 1
        pos_hint: {"x":0, "y":0}
        size_hint_y: 0.1
        text: "Terug"
        font_name: 'app/assets/D-DIN.otf'
        color: 1,1,1,1
        background_normal: 'app/assets/buttonnormal.png'
        background_down: 'app/assets/buttondown.png'
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "scan"

# change how the datatable in the dropdown looks
<-MDDataTable>:
    background_color: 1, 1, 1, 1
    MDCard:
        id: container
        orientation: "vertical"
        elevation: 0
        padding: "5dp", "5dp", "5dp", "5dp"
        # canvas added for this change
        canvas:
            Color:
                rgba: root.background_color
            Rectangle:
                size: self.size
                pos: self.pos
