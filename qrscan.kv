<ScanScreen>:
	GridLayout:
	    cols: 1

		ScanAnalyze:
		    size_hint_y: 10
			id:preview
			aspect_ratio: '16:9'
			extracted_data: root.got_result

        GridLayout:
            cols: 2
            MDLabel:
                size_hint_y: None
			    height:'30dp'
			    text: "Event "

			TextInput:
			    size_hint_y: None
			    height:'30dp'
                id: event
                multiline: False

        Button:
            size_hint_y: None
			height:'60dp'
            text: "Go Back"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"
        GridLayout:
            cols: 2
            Button:
                size_hint_y: None
			    height:'60dp'
                text: "Reset Tokens"
                on_release:
                    root.resettokens()
            Button:
                size_hint_y: None
			    height:'60dp'
                text: "Reset Resets"
                on_release:
                    root.resetresets()

<LoginScreen>
    GridLayout:
        cols:1

        GridLayout:
            cols: 2
            MDLabel:
			    size_hint_y: None
			    height:'30dp'
			    text: "Email "
			    halign: 'right'

            TextInput:
                size_hint_y: None
			    height:'30dp'
                id: mail
                multiline: False

        GridLayout:
            cols: 2
            MDLabel:
			    size_hint_y: None
			    height:'30dp'
			    text: "Password "
			    halign: 'right'

			TextInput:
			    size_hint_y: None
			    height:'30dp'
                id: passw
                multiline: False
                password: True

        Button:
            id: confirmbutton
            size_hint: 1, 10
            text: "Submit"
            on_release:
                root.login()
                root.buttonpress()

        MDLabel:
            id: validitylabel
			size_hint_y: None
			height:'30dp'
			halign: 'right'

<TokenScreen>
    GridLayout:
        cols:1
        MDLabel:
            halign: "center"
            text: "Refreshing Token"
			size_hint_y: 0.8
			background_color: 0, 0, 1, 1
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
        Button:
            size_hint_y: 0.2
            text: "Go Back"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "scan"

