# screen that gets almost no info, no "more info" dropdown is therefore present

<PaylessScreen>
    GridLayout:
        cols:1
        # show the red cross
        Image:
            source: 'app/assets/xmark.png'
			size_hint_y: 0.7
			size_hint_x: 0.7
			fit_mode: "contain"

	    # button to go back to the scan screen
        Button:
            size_hint_y: 0.2
            text: "Terug"
            font_name: 'app/assets/D-DIN.otf'
            color: 1,1,1,1
            background_normal: 'app/assets/buttonnormal.png'
            background_down: 'app/assets/buttondown.png'
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "scan"
